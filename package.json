{
  "name": "codemirror-nsis",
  "description": "NSIS support for the CodeMirror syntax highlighter",
  "version": "0.8.5",
  "author": "Jan T. Sott",
  "license": "MIT",
  "main": "dist/nsis.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint": "eslint ./src",
    "start": "rollup --watch --config",
    "test": "npm run lint",
    "prepare": "husky install"
  },
  "keywords": [
    "codemirror",
    "mode",
    "nsis",
    "nullsoft",
    "syntax highlighter"
  ],
  "homepage": "https://github.com/idleberg/codemirror-nsis",
  "repository": "https://github.com/idleberg/codemirror-nsis",
  "dependencies": {
    "codemirror": "^5.56.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-recommended": "^4.1.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.0",
    "rollup": "^2.24.0",
    "rollup-plugin-terser": "^7.0.0"
  },
  "lint-staged": {
    "*.(js|json)": "eslint --cache --fix"
  }
}
